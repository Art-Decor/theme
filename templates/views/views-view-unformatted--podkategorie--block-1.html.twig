{#
/**
 * @file
 * Default theme implementation to display a view of unformatted rows.
 *
 * Available variables:
 * - title: The title of this group of rows. May be empty.
 * - rows: A list of the view's row items.
 *   - attributes: The row's HTML attributes.
 *   - content: The row's content.
 * - view: The view object.
 * - default_row_class: A flag indicating whether default classes should be
 *   used on rows.
 *
 * @see template_preprocess_views_view_unformatted()
 *
 * @ingroup themeable
 */
#}

{% set row_classes = ['views-row group relative h-[200px] md:h-[250px] p-[18px] pb-3 md:p-4 flex flex-col justify-end md:flex-row md:items-end md:justify-between'] %}

<div class="grid grid-cols-2 md:grid-cols-4 gap-[6px] gap-y-2.5 md:gap-2">
	{% for row in rows|slice(0, 8) %}
		<div {{ row.attributes.addClass(row_classes) }}>
			{{- row.content -}}
			<span class="pointer-events-none shrink-0 z-10 mt-2 md:ml-2 flex justify-center items-center w-[30px] h-[30px] rounded-full border border-white bg-transparent group-hover:bg-white transition duration-200">
				<svg class="stroke-white group-hover:stroke-brown-100 transition duration-200"
					width="10"
					height="10"
					viewBox="0 0 10 10"
					fill="none"
					xmlns="http://www.w3.org/2000/svg">
					<path d="M2.5 5H7.70833M7.70833 5L5.20833 2.5M7.70833 5L5.20833 7.5"
						stroke-linecap="round"
						stroke-linejoin="round"></path>
				</svg>
			</span>
		</div>
	{% endfor %}
</div>

{% if (rows|length) > 8 %}
	<div id="more-categories" class="collapse">
		<div class="grid grid-cols-2 md:grid-cols-4 gap-[6px] gap-y-2.5 md:gap-2 pt-2.5 md:pt-2">
			{% for row in rows|slice(8) %}
				<div {{ row.attributes.addClass(row_classes) }}>
					{{- row.content -}}
          <span class="pointer-events-none shrink-0 z-10 mt-2 md:ml-2 flex justify-center items-center w-[30px] h-[30px] rounded-full border border-white bg-transparent group-hover:bg-white transition duration-200">
            <svg class="stroke-white group-hover:stroke-brown-100 transition duration-200"
              width="10"
              height="10"
              viewBox="0 0 10 10"
              fill="none"
              xmlns="http://www.w3.org/2000/svg">
              <path d="M2.5 5H7.70833M7.70833 5L5.20833 2.5M7.70833 5L5.20833 7.5"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg>
          </span>
				</div>
			{% endfor %}
		</div>
	</div>
{% endif %}
