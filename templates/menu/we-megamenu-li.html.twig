  {% if href is empty %}
  <li class="we-mega-menu-li no-link">
    {{ content }}
  </li>
  {% else %}
  <li {{ attributes }}>
    <div class="px-5">
      <a class="we-mega-menu-li !py-5 !px-0 md:mx-0 !border-0 !border-b !border-solid !border-gray-20 !text-primary-100 !text-xl !bg-white font-medium !flex justify-between items-center" title="{{ attribute(attributes, 'data-description') }}" href="{{ href }}" target="{{ attribute(attributes, 'data-target') }}">
        {% if (attribute(attributes, 'data-icon') is defined and attribute(attributes, 'data-icon')|trim) %}
          <i class="{{ attribute(attributes, 'data-icon') }}"></i>
        {% endif %}

        {{- title -}}

        {% if (attribute(attributes, 'data-caption') is defined and attribute(attributes, 'data-caption')|trim) %}
          <span class="we-mega-menu-caption">{{ attribute(attributes, 'data-caption') }}</span>
        {% endif %}

        {% if (content) %}
        <div class="border border-primary-100 p-2.5 rounded-full md:hidden">
          <svg width="10" height="10" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M2.5 5L7.70833 5M7.70833 5L5.20833 2.5M7.70833 5L5.20833 7.5" stroke="#382335" stroke-linecap="round" stroke-linejoin="round"></path>
          </svg>
        </div>
        {% endif %}
      </a>
    </div>
    {{ content }}
  </li>
  {% endif %}