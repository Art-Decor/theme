{% set parent_id = item_config.item_config.id %}

<div {{
	attributes.addClass(
		' w-full md-wide:!h-[450px] xl:!h-[390px] bg-gray-10 md-wide:bg-neutral-90 md-wide:!py-0 md-wide:!px-0 md-wide:!m-0 md-wide:!shadow-none md-wide:!border-0 transition duration-300'
	)
	}}>
	<div class="inner-header">
		<span class="basis-1/3 grow-0 shrink flex items-center gap-2.5 py-2 cursor-pointer text-[14px] font-semibold text-primary-40"
			data-submenu-close-btn
			data-parent-id="{{ parent_id }}">
			<svg width="19" height="18" viewBox="0 0 19 18" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path d="M17.6666 9H0.99996M0.99996 9L8.99996 1M0.99996 9L8.99996 17"
					stroke="#AFA7AE"
					stroke-linecap="round"
					stroke-linejoin="round" />
			</svg>Back
		</span>
		<span class="basis-1/3 text-center text-3xl text-primary-100 font-light">
			{# {% if parent_id == 'd2a94e4c-78da-4d3c-bab3-a90bf35be379' %}
			Wallart
			{% elseif parent_id == 'c0e6b951-81fb-41ad-a4b2-720c532dc2ae' %}
			Wallpaper
			{% elseif parent_id == '1a8423f0-5ffb-4769-bbfd-0a6fe4bb1520' %}
			Your Image
			{% endif %} #}
			{{ attribute(item_config.item_config, 'data-caption') }}
		</span>
		<span class="basis-1/3"></span>
	</div>
	<div class="we-mega-menu-submenu-inner px-5 md-wide:px-0 md-wide:h-full">
		{{ row }}
	</div>
</div>
